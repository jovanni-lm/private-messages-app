.col-md-8.col-md-offset-2
  .row
    = simple_form_for @user, html: { class: 'form-horizontal' } do |f|
      = f.error_notification
      .col-sm-8
        .form-group
          = f.input :username, input_html: { class: 'form-control' },  :required => true
        .form-group
          = f.input :email, input_html: { class: 'form-control' }
        - if current_user.admin
          .form-check.form-group
            = f.input :admin, as: :boolean, input_html: { class: 'form-check-input' }
          .form-check.form-group
            = f.input :blocked, as: :boolean, input_html: { class: 'form-check-input' }
        .form-group
          = f.input :password, autocomplete: 'off', required: false, input_html: { class: 'form-control' }
        .form-group
          = f.input :password_confirmation, required: false, input_html: { class: 'form-control' }

        .form-group
          = f.button :submit, class: "btn btn-primary"
