= simple_form_for @message_dialog_form, url: messages_path, html: { class: 'form-horizontal' } do |f|
  = f.input :body, label: 'Message', input_html: { class: 'form-control' }
  = f.hidden_field :sender, value: current_user.id
  = f.hidden_field :recipient, value: @user.id
  = f.button :submit, 'Send Message', class: 'btn-primary'
